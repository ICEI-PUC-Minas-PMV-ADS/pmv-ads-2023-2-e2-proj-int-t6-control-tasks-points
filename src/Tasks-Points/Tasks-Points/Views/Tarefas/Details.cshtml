            @Html.DisplayNameFor(model => model.Coins)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coins)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
